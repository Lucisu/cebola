	"version": "0.2.0",
	"configurations": [
		{
			"name": "Listen for Xdebug",
			"type": "php",
			"request": "launch",
			"pathMappings": {
                "/var/www/html": "${workspaceRoot}/container/wp",
                "/var/www/html/wp-includes": "${workspaceRoot}/container/wp/wp-includes",
            },
			"port": 10000,
			"maxConnections": 1,
			"xdebugSettings": {
				"max_children": 128,
				"max_data": 512,
				"max_depth": 8
			}
		}
	]
}